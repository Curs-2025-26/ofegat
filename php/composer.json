{
  "name": "classe/ofegat",
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "require": {},
  "require-dev": {
    "phpunit/phpunit": "^11",
    "phpstan/phpstan": "^1",
    "friendsofphp/php-cs-fixer": "^3",
    "symfony/yaml": "^6"
  },
  "scripts": {
    "test": "phpunit",
    "test:e1": "phpunit --testsuite Entrega1",
    "test:e2": "phpunit --testsuite Entrega2",
    "test:e3": "phpunit --testsuite Entrega3",
    "stan": "phpstan analyse --no-progress",
    "lint": "php-cs-fixer fix --dry-run --diff",
    "fix": "php-cs-fixer fix",
    "grade:e1": "php bin/grade.php --stage=1",
    "grade:e2": "php bin/grade.php --stage=2",
    "grade:e3": "php bin/grade.php --stage=3"
  }
}